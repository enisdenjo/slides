{
  "name": "slides",
  "private": true,
  "workspaces": [
    "*"
  ],
  "packageManager": "yarn@4.4.1",
  "scripts": {
    "build": "yarn workspaces foreach -A run slidev build -o ../_site/$(basename $(pwd)) --base /$(basename $(pwd))",
    "check:format": "prettier -c .",
    "format": "yarn check:format -w"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-sh": "^0.14.0"
  }
}
